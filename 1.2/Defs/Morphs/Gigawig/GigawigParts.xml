<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Schemas/MutationDef.xsd">
    <Pawnmorph.Hediffs.MutationDef ParentName="PMI_InsectMutationBase">
        <defName>PMI_DiggerClaws</defName>
        <label>digger claws</label>
        <description>These claws are fierce and forged from laminate chitin, which can dig at solid rock with no ill effect on its bearer.</description>
        <classInfluence>PMI_GigawigMorph</classInfluence>
        <parts>
            <li>Hand</li>
        </parts>
        <stages>
            <li>
                <label>new</label>
            </li>
            <li>
                <minSeverity>1</minSeverity>
                <label>adapted</label>
            </li>
        </stages>
        <comps>
            <li Class="HediffCompProperties_VerbGiver">
                <tools>
                    <li>
                        <label>hand claw</label>
                        <capacities>
                            <li>Cut</li>
                        </capacities>
                        <power>6</power>
                        <cooldownTime>2.6</cooldownTime>
                    </li>
                </tools>
            </li>
            <li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
                <severityPerDay>0.25</severityPerDay>
            </li>
        </comps>
    </Pawnmorph.Hediffs.MutationDef>
</Defs>