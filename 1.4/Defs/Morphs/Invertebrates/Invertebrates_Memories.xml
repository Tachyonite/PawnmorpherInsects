<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/Tachyonite/Pawnmorpher/dev/Schemas/ThoughtDef.xsd">

	<ThoughtDef ParentName="OutlookMemoryBase">
		<defName>PMI_InvertebratesTransformationMemory</defName>
		<stages>
			<li>
				<label>morphed</label>
				<description>I'm... a bug? everything is so alien now.</description>
				<baseMoodEffect>-3</baseMoodEffect>
			</li>
			<li>
				<label>morphed</label>
				<description>Being a bug makes everything so new and exciting</description>
				<baseMoodEffect>+3</baseMoodEffect>
			</li>
			<li>
				<label>morphed</label>
				<description>This is even worse then I thought...I turned into a bug!</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef ParentName="OutlookMemoryBase">
		<defName>PMI_InvertebratesRevertedMemory</defName>
		<stages>
			<li>
				<label>reverted</label>
				<description>Back to normal!</description>
				<baseMoodEffect>3</baseMoodEffect>
			</li>
			<li>
				<label>reverted</label>
				<description>I was just getting used to it too.</description>
				<baseMoodEffect>-3</baseMoodEffect>
			</li>
			<li>
				<label>reverted</label>
				<description>Thank Randy, my bones are on the inside now, where they should be!</description>
				<baseMoodEffect>10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef ParentName="OutlookMemoryBase">
		<durationDays>1</durationDays>
		<defName>PMI_ChitainMemory</defName>
		<stages>
			<li>
				<label>Exoskeleton</label>
				<description>This is making it much harder to move</description>
				<visible>true</visible>
				<baseMoodEffect>-1</baseMoodEffect>
			</li>
			<li>
				<label>Exoskeleton</label>
				<description>I feel like I'm wearing a coat of armor</description>
				<visible>true</visible>
				<baseMoodEffect>2</baseMoodEffect>
			</li>
			<li>
				<label>Exoskeleton</label>
				<description>this is so gross! and I can't feel anything anymore</description>
				<visible>true</visible>
				<baseMoodEffect>-3</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
	<ThoughtDef ParentName="OutlookMemoryBase">
		<durationDays>1</durationDays>
		<defName>PMI_AntennaMemory</defName>
		<stages>
			<li>
				<label>Antenna</label>
				<description>These things keep getting in the way</description>
				<visible>true</visible>
				<baseMoodEffect>-1</baseMoodEffect>
			</li>
			<li>
				<label>Antenna</label>
				<description>These are so cute, and I can feel the air move around me!</description>
				<visible>true</visible>
				<baseMoodEffect>2</baseMoodEffect>
			</li>
			<li>
				<label>Antenna</label>
				<description>I can't stand these things, everything sounds wrong now</description>
				<visible>true</visible>
				<baseMoodEffect>-3</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef ParentName="OutlookMemoryBase">
		<durationDays>1</durationDays>
		<defName>PMI_CompoundEyesMemory</defName>
		<stages>
			<li>
				<label>Compound Eyes</label>
				<description>Everything looks different and wrong</description>
				<visible>true</visible>
				<baseMoodEffect>-1</baseMoodEffect>
			</li>
			<li>
				<label>Antenna</label>
				<description>Everything is so colorful</description>
				<visible>true</visible>
				<baseMoodEffect>2</baseMoodEffect>
			</li>
			<li>
				<label>Antenna</label>
				<description>I think I'm going to be sick</description>
				<visible>true</visible>
